@model IEnumerable<CandiDate>

   @if(Model.Count() > 0)
   {
     <h6 class = "display-6">
            Applications(@Model.Count())
         </h6>

         <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Tam Adi</th>
                    <th>Başvuru Tarihi</th>
                    <th>kurs</th>
                </tr>
            </thead>
            <tbody>
                @foreach(CandiDate candiDate in Model)
                {
                    <tr>
                        <td>@candiDate.Eamil</td>
                        <td>@candiDate.TamAdSoyAd</td>
                        <td>@candiDate.BasvuruTarihi</td>
                        <td>@candiDate.SectigiKurs</td>
                    </tr>
                }
            </tbody>
         </table>
   }
    else
    {
       <div class = "alert alert-info">
        henüz herhangi bir başvuru yok başvuru için tiklayin.
        <a class="alert-link" asp-action="Apply">Giriş</a>
       </div>
    }